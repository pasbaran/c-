Console.Write("sayı gir: ");
        int body = int.Parse(Console.ReadLine());

        int i = 1; 
        int satir = body; 

        while (i <= body)
        {
            int bosluk = body - i;
            int j = 0;

            while (j < bosluk)
            {
                Console.Write(" ");
                j++;
            }

            j = 0;
            while (j < (2 * i - 1))
            {
                Console.Write("*");
                j++;
            }

            Console.WriteLine(); 
            i++;

