            int sayi;
            int cifttoplam = 0;
            int tektoplam = 0;
            int tek = 0;
            int i = 0;
            int j = 1;

            Console.WriteLine("Lütfen bir sayı girin:");
            sayi = Convert.ToInt32(Console.ReadLine());

            while (i <= sayi || j <= sayi)
            {
                if (i <= sayi)
                {
                    cifttoplam += i;
                    i += 2;
                }

                if (j <= sayi)
                {
                    tektoplam += j;
                    j += 2;
                }
            }

            tek = tektoplam - j;

            // Sonuçları yazdırmak için ek kod ekleyebilirsiniz
            Console.WriteLine("Çift toplam: " + cifttoplam);
            Console.WriteLine("Tek toplam: " + tek);
        }
    }
}
